<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
        <%= devise_error_messages! %>
        <legend>Sign in</legend>
        <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your Email' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password' %>
        <br/>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

