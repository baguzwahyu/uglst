<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
        <%= devise_error_messages! %>
        <legend>Sign Up</legend>
        <h4>And manage your User-Group community.</h4>
        <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your Email' %>
        <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'Username' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Confirm Password' %>
        <br/>
        <span class="help-block">We won't sell your email or spam you.</span>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

