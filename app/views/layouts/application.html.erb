  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'User-Group List', root_path, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active">
              <%= link_to root_path do %>
                <span class="glyphicon glyphicon-th-list"></span> User-Groups
              <% end %>
            </li>
            <li><a href="https://github.com/ugtastic/uglst/issues" target="_blank"><span class="glyphicon glyphicon-wrench"></span> ISSUES!</a></li>
            <li><%= link_to pages_changelog_path do %>
              <span class="glyphicon glyphicon-time"></span> Changelog
            <% end %></li>
        </ul>

        <div class="col-sm-3 col-md-3">
          <form class="navbar-form" role="search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search User-Groups" name="q">

              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li id="nav-profile-btn" class=""><%= link_to profile_path(current_user) do %>
              <span class="glyphicon glyphicon-user"></span> <%= current_user.username %>
          <% end %></li>
        <li id="nav-pricing-btn"><%= link_to 'Pricing', pages_pricing_path %></li>
        <li id="nav-profile-btn" class=""><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li id="nav-register-btn" class=""><%= link_to "Register", new_registration_path(User) %></li>
        <li id="nav-pricing-btn"><%= link_to 'Pricing', pages_pricing_path %></li>
        <li id="nav-login-btn" class=""><%= link_to "Login", new_session_path(User) %></li>
      <% end %>
    </ul>
  </div>
  <!--/.nav-collapse -->
</div>
</div>

<p id="notice" class="notice"><%= notice %></p>
<p id="alert" class="alert"><%= alert %></p>

<div class="container">
  <div class="alert alert-danger">This is a very early release of UGl.st. I'll try to preserve data integrity but it can break or leak data at this stage. Please report issues <a href="https://github.com/ugtastic/uglst/issues" target="_blanK">here</a>.</div>

  <ol class="breadcrumb">
    <li><%= link_to root_path do %>
      <span class="glyphicon glyphicon-home"></span> Home
    <% end %></li>
  <%= yield :breadcrumb %>
</ol>

<%= yield %>
</div>
<div class="container footer">
  <hr>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-md-3">
        <ul class="list-unstyled">
          <li>User-Group List<li>
              <li><a href="http://www.ugtastic.com">UGtastic Interviews</a></li>
            </ul>
          </div>
          <div class="col-md-3"></div>
          <div class="col-md-3"></div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-lg-12">
          <div class="col-md-8">
            <%= link_to 'Terms of Service', pages_terms_of_service_path %>
            <%= link_to 'Privacy', pages_privacy_path %>
            <%= link_to 'Security', pages_security_path %>
          </div>
          <div class="col-md-4">
            <p class="muted pull-right">Â© 2014 Mike Hall. All rights reserved</p>
          </div>
        </div>
