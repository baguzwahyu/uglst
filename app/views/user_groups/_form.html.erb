<%= form_for(@user_group) do |f| %>
  <% if @user_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_group.errors.count, "error") %> prohibited this User-Group from being saved:</h2>

      <ul>
        <% @user_group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state_province, 'State/Province' %><br>
    <%= f.text_field :state_province %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :homepage %><br>
    <%= f.text_field :homepage %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br>
    <%= f.text_field :twitter, placeholder: 'https://twitter.com/ugtastic'  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <% if current_user && current_user.admin? %>
    <fieldset>
      <legend>Admin Fields</legend>
      <div class="field">
        <%= f.label :slug %><br>
        <%= f.text_field :slug, disabled: true %>
      </div>

      <div class="field">
        <%= f.label :latitude %><br>
        <%= f.text_field :latitude %>
      </div>
      <div class="field">
        <%= f.label :longitude %><br>
        <%= f.text_field :longitude %>
      </div>
      <div class="field">
        <%= f.label :slug %><br>
        <%= f.text_field :slug %>
      </div>
      <div class="field">
        <%= f.label :registered_by_id %><br>
        <%= f.collection_select :registered_by_id, User.all, :id, :username %>
      </div>
    </fieldset>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
