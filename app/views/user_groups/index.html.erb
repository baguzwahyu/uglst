<h1>Listing user_groups</h1>

<% if @user_groups.empty? %>

  <strong>No User-Groups to show.</strong>

<% else %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Homepage</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user_groups.each do |user_group| %>
        <tr>
          <td><%= user_group.name %></td>
          <td><%= user_group.description %></td>
          <td><%= user_group.homepage %></td>
          <td><%= link_to 'Show', user_group %></td>
          <td><%= link_to 'Edit', edit_user_group_path(user_group) %></td>
          <td><%= link_to 'Destroy', user_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= link_to 'New User group', new_user_group_path %>
